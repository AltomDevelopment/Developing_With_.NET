@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<!-- Creating the Layout page that will be used across your Login and Register Pages-->
<!-- This page is in the middle between your Main layout page and your other pages. In order to keep the connection we have to specify the connection section -->
<div class="row justify-content-center">
    <div class="col-5 mt-5">
        <div class="card login-logout-card">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link" href="/Identity/Account/Login">  <!--This should be the URL for the Login page -->
                        Log in</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Identity/Account/Register"> <!--This should be the URL for the Register page -->
                        Register</a> 
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-10 my-4">
                    @RenderBody() <!-- This ethod will render the body of the view for your pages -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @await RenderSectionAsync("Scripts", required: false) <!-- If the if statement doesnt work check the 3 bar slash symbol-->
    <script>
        $(function() {
            const currentPage = location.pathname;
            $('.nav-tabs li a').each(function() {
                const $this = $(this);
                if (currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase()) !== -1)  {
                    $this.addClass('active');
                }
            }
        })
    </script>
}